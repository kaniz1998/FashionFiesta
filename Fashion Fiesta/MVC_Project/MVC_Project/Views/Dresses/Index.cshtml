
@{
    ViewBag.Title = "Index";
}
<style>
    body {
        background-image: url("/Images/Brandslogo.jpg");
    }
</style>
<h2 class="display-4 text-decoration-underline text-center">Dress Information</h2>

<div class="row">
    <div class="col">
        <div class="d-flex justify-content-end">
            <a href="@Url.Action("Create","Dresses")" class="btn btn-outline-dark"><i class="fa fa-plus-square"></i> Add New Dress</a>
        </div>
    </div>
    <div id="table-div">
        @Html.Action("DressInfo")
    </div>
</div>

@section styles{
    <!-- Option 1: Include in HTML -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
}
@section scripts{
    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    <script>
        $(document).on("click", "button.show", function () {
            var showBtn = $(this);
            var hideBtn = showBtn.next();
            var trSh = showBtn.closest("tr");
            var trSt = trSh.next();
            showBtn.hide();
            hideBtn.show();
            trSt.show();
        });
        $(document).on("click", "button.hide", function () {
            var hideBtn = $(this);
            var showBtn = hideBtn.prev();
            var trSh = showBtn.closest("tr");
            var trSt = trSh.next();
            showBtn.show();
            hideBtn.hide();
            trSt.hide();
        });
    </script>
}

